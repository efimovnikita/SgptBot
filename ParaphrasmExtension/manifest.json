{
  "name": "Paraphrasm Extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Paraphrase selected text using a GPT-3 API.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
